<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mock Upload Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <link href="./stylesheets/addmock.css" rel="stylesheet">
    <script src="https://unpkg.com/alpinejs" defer></script>
    <script src="https://cdn.tailwindcss.com"></script>

</head>

<body>

     <nav class="bg-blue-600 text-white p-4">
            <div class="container mx-auto flex justify-between items-center">
                <div class="flex justify-between h-16">
                    <div class="flex">
                        <div class="flex-shrink-0 flex items-center">
                            <h1 class="text-xl font-bold text-white-800">CDC Portal</h1>
                        </div>
                        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                             <a href="/cdc"
                                class="border-transparent text-white-500 hover:border-gray-300  inline-flex items-center px-1 pt-1 border-b-2 text-l font-medium">
                                Add Company
                            </a>
                             <a href="/cdc"
                                class="border-transparent text-white-500 hover:border-gray-300  inline-flex items-center px-1 pt-1 border-b-2 text-l font-medium">
                                View Companies
                            </a>
                            <a href="/addmock"
                                class="border-transparent text-white-500 hover:border-gray-300  inline-flex items-center px-1 pt-1 border-b-2 text-l font-medium">
                                Add Mock
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>


    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="upload-box" id="uploadBox">
                    <i class="fas fa-cloud-upload-alt fa-4x mb-3"></i>
                    <h4>Upload Mock Data</h4>
                    <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#uploadModal">Add
                        Mock</button>
                </div>

                <div class="table-responsive mt-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4>Mock Entries</h4>
                        <input type="text" class="form-control w-25" placeholder="Search..." id="searchInput">
                    </div>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Company Logo</th>
                                <th>Company Name</th>
                                <th>Mock Link</th>
                                <th>Date</th>
                                <th>Duration</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="mockTableBody">
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Upload Modal -->
    <div class="modal fade" id="uploadModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Mock</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="mockForm" method="POST" action="/addmock" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label">Company Logo (Upload or Provide URL)</label>
                            <div class="input-group">
                                <input type="file" name="companyLogo" id="companyLogoInput"
                                    accept="image/png, image/jpeg" class="form-control">
                            </div>
                            <div class="mt-3">
                                <label class="form-label">OR Enter Image URL</label>
                                <input type="url" name="companyLogoUrl" id="companyLogoUrl" class="form-control">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Company Name</label>
                            <input type="text" name="companyName" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mock Link</label>
                            <input type="url" name="mockLink" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mock Date</label>
                            <input type="date" name="mockDate" class="form-control" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Duration</label>
                            <div class="input-group">
                                <input type="number" name="duration" class="form-control" required>
                                <select name="durationUnit" class="form-select">
                                    <option value="weeks">Weeks</option>
                                    <option value="months">Months</option>
                                </select>
                            </div>
                        </div>

                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" form="mockForm">Add Mock</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this mock entry?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast" role="alert">
            <div class="toast-header">
                <strong class="me-auto">Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body"></div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>


<script>
    async function loadMocks() {
        try {
            const response = await fetch('/getMocks');
            const mocks = await response.json();

            const tableBody = document.getElementById('mockTableBody');
            tableBody.innerHTML = ''; // Clear any existing rows

            mocks.forEach(mock => {
                const row = document.createElement('tr');

                // Add a data-id attribute to the row for easy identification
                row.setAttribute('data-id', mock.id);

                row.innerHTML = `
                <td><img src="${mock.company_logo}" class="company-logo" alt="Company Logo"></td>
                <td>${mock.company_name}</td>
                <td><a href="${mock.mock_link}" target="_blank">${mock.mock_link}</a></td>
                <td>${mock.mock_date}</td>
                <td>${mock.duration} ${mock.duration_unit}</td>
                <td><button class="btn btn-danger btn-sm" onclick="deleteMock(${mock.id})"><i class="fas fa-trash"></i></button></td>
            `;
                tableBody.appendChild(row);
            });
        } catch (error) {
            console.error('Error loading mock data:', error);
        }
    }

    loadMocks(); // Call this function when the page loads



    async function deleteMock(id) {
        if (confirm('Are you sure you want to delete this mock?')) {
            try {
                const response = await fetch(`/deleteMock/${id}`, { method: 'DELETE' });

                if (response.ok) {
                    // Remove the row from the UI
                    const rowToDelete = document.querySelector(`tr[data-id='${id}']`);
                    if (rowToDelete) {
                        rowToDelete.remove();
                    }
                } else {
                    console.error('Failed to delete mock:', await response.text());
                }
            } catch (error) {
                console.error('Error deleting mock:', error);
            }
        }
    }
</script>

</html>