<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student - Companies</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        #applicationModal {
            display: none;
            align-items: center;
            justify-content: center;
        }

        #applicationModal.active {
            display: flex;
        }
    </style>
</head>

<body class="bg-gray-50">
    <!-- Navigation Bar -->
   <nav class="bg-blue-600 text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">CDC Portal</h1>
            <div class="space-x-4">
                <a href="/student" class="px-4 py-2 hover:bg-blue-700 rounded">Companies</a>
                <a href="/applied_companies" class="px-4 py-2 hover:bg-blue-700 rounded">Applied Companies</a>
                <a href="/practice" class="px-4 py-2 hover:bg-blue-700 rounded">Mocks</a>
            </div>
        </div>
    </nav>

    <!-- Content Section -->
    <section class="container mx-auto p-6">
        <div class="bg-white rounded-lg shadow-lg p-6">
            <h2 class="text-2xl font-semibold mb-4">Available Companies</h2>
            <table class="min-w-full divide-y divide-gray-200">
                <thead>
                    <tr class="bg-gray-50">
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Company Name</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Domain</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Department</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-widerru">
                            Recitment Rounds</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-widerctio">
                            An</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (companies && companies.length> 0) { %>
                        <% companies.forEach(company=> { %>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <%= company.company_name %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <%= company.domain %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <%= company.branch %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <%= company.recruitment_rounds %>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <button type="button" onclick="openApplicationModal('<%= company.company_name %>')"
                                        class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Apply</button>
                                </td>
                            </tr>
                            <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center px-6 py-4 text-gray-500">No companies
                                            available at the moment.</td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </section>

    <!-- Job Application Modal -->
    <div id="applicationModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
        <div class="bg-white rounded-lg p-6 w-full max-w-lg relative">
            <button type="button" onclick="closeApplicationModal()"
                class="absolute top-3 right-3 text-gray-600 hover:text-gray-900 text-2xl">&times;</button>
            <h2 class="text-2xl font-semibold mb-4 text-center">Job Application</h2>
            <form id="applicationForm" class="space-y-4" method="POST" action="/submit-application">
                <input type="hidden" id="companyNameField" name="company_name">
                <div>
                    <label class="block text-gray-700 mb-2">Full Name</label>
                    <input type="text" name="name" required pattern="[A-Za-z ]+" class="w-full border rounded p-2">
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">JNTU Registration Number</label>
                    <input type="text" name="jntu_number" required pattern="[A-Za-z0-9]+"
                        class="w-full border rounded p-2">
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">CGPA</label>
                    <input type="number" name="cgpa" min="0" max="10" step="0.01" required
                        class="w-full border rounded p-2">
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">Number of Projects</label>
                    <input type="number" name="projects" min="0" max="10" required class="w-full border rounded p-2">
                </div>
                <div>
                    <label class="block text-gray-700 mb-2">Resume (Google Drive Link)</label>
                    <input type="url" name="resume_link" placeholder="Enter your Google Drive link" required
                        class="w-full border rounded p-2">
                </div>

                <div class="flex justify-end space-x-2">
                    <button type="button" onclick="closeApplicationModal()"
                        class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">Cancel</button>
                    <button type="submit"
                        class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Apply</button>
                </div>
            </form>
        </div>
    </div>

    <!-- JavaScript for Modal -->
    <script>
        function openApplicationModal(companyName) {
            const modal = document.getElementById('applicationModal');
            modal.classList.add('active');
            document.getElementById('companyNameField').value = companyName;
        }

        function closeApplicationModal() {
            const modal = document.getElementById('applicationModal');
            modal.classList.remove('active');
        }
    </script>
</body>

</html>