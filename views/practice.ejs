
 <!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mocks and Practice Platform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        /* General Styling */
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .mock-container {
            padding: 2rem;
        }

        .mock-card {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            display: flex;
            flex-direction: column;
            height: 300px;
            align-items: center;
        }

        .mock-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        }

        .mock-card img {
            width: 50%;
            height: 50%;
            object-fit: cover;
            
        }

        .mock-card .card-body {
            padding: 1rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            
        }

        .mock-card .card-title {
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .mock-card .card-text {
            font-size: 0.85rem;
            color: #6c757d;
            margin-bottom: 0.5rem;
        }

        .mock-card .btn-primary {
            font-size: 0.85rem;
            font-weight: 500;
            background-color: #007bff;
            border: none;
            transition: background-color 0.3s ease;
        }

        .mock-card .btn-primary:hover {
            background-color: #0056b3;
        }

        .mock-header {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .mock-header h1 {
            font-size: 1.8rem;
            font-weight: 700;
        }

        .mock-header p {
            font-size: 1rem;
            color: #6c757d;
        }
    </style>
</head>

<body>
    <nav class="bg-blue-600 text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold">CDC Portal</h1>
            <div class="space-x-4">
                <a href="/student" class="px-4 py-2 hover:bg-blue-700 rounded">Companies</a>
                <a href="/applied_companies" class="px-4 py-2 hover:bg-blue-700 rounded">Applied Companies</a>
                <a href="/practice" class="px-4 py-2 hover:bg-blue-700 rounded">Mocks</a>
            </div>
        </div>
    </nav>
    <div class="container mock-container">
        <div class="mock-header">
            <h1>Mocks and Practice</h1>
            <p>Explore and Enhance Your Skills</p>
        </div>
        <div id="mockCards" class="row g-3"></div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function fetchMocks() {
            try {
                const response = await fetch('/getMocks');
                if (!response.ok) throw new Error('Failed to fetch mocks');
                const mocks = await response.json();

                const mockCardsContainer = document.getElementById('mockCards');
                mockCardsContainer.innerHTML = ''; // Clear existing content

                mocks.forEach(mock => {
                    const card = document.createElement('div');
                    card.className = 'col-12 col-sm-6 col-md-4 col-lg-3'; // 4 cards per row on large screens
                    card.innerHTML = `
                        <div class="card mock-card">
                            <img src="${mock.company_logo}" alt="${mock.company_name}">
                            <div class="card-body">
                                <h5 class="card-title">${mock.company_name}</h5>
                                <p class="card-text">Date: ${mock.mock_date}</p>
                                <p class="card-text">Duration: ${mock.duration} ${mock.duration_unit}</p>
                                <a href="${mock.mock_link}" target="_blank" class="btn btn-primary w-100">Attend Mock</a>
                            </div>
                        </div>`;
                    mockCardsContainer.appendChild(card);
                });
            } catch (error) {
                console.error('Error fetching mock data:', error.message);
                const mockCardsContainer = document.getElementById('mockCards');
                mockCardsContainer.innerHTML = '<p class="text-danger text-center">Failed to load mock data. Please try again later.</p>';
            }
        }

        // Fetch mocks on page load
        fetchMocks();
    </script>
</body>

</html>
